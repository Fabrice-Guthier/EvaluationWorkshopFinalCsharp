@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-4 bg-light rounded-3">
    <div class="container-fluid">
        <h1 class="fw-bold">Projet d'Évaluation</h1>
    </div>
</div>

@* Section avec la recherche par nom ou race *@
<div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Trouver un Animal</h1>
    <p class="col-md-8 fs-4">
        Utilisez les filtres ci-dessous pour rechercher un animal spécifique par son nom ou sa race.
    </p>

    <hr class="my-4">
    <form asp-controller="Animals" asp-action="Index" method="get">
        <div class="row align-items-end g-3">
            <div class="col-md">
                <label for="searchString" class="form-label">Nom de l'animal</label>
                <input type="text" name="searchString" class="form-control" placeholder="Ex: Rex, Whiskers...">
            </div>
            <div class="col-md">
                <label for="raceId" class="form-label">Race</label>
                <select name="raceId" class="form-select" asp-items="@(ViewData["RacesList"] as SelectList)">
                    <option value="">Toutes les races</option>
                </select>
            </div>
            <div class="col-md-auto">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-search"></i> Rechercher
                </button>
            </div>
        </div>
    </form>

</div>

@* Section avec les cartes de navigation vers les CRUDs *@
<div class="row align-items-md-stretch">

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Gestion des Animaux</h4>
                <p class="card-text flex-grow-1">
                    Accédez à la liste complète des animaux. Vous pouvez en créer de nouveaux,
                    modifier leurs informations ou les supprimer de la base de données.
                </p>
                <a class="btn btn-primary" asp-controller="Animals" asp-action="Index">
                    Gérer les Animaux <i class="bi bi-arrow-right-circle"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Gestion des Races</h4>
                <p class="card-text flex-grow-1">
                    Accédez à la liste des races. Vous pouvez ajouter de nouvelles races,
                    les éditer ou les supprimer.
                </p>
                <a class="btn btn-primary" asp-controller="Races" asp-action="Index">
                    Gérer les Races <i class="bi bi-arrow-right-circle"></i>
                </a>
            </div>
        </div>
    </div>

</div>
