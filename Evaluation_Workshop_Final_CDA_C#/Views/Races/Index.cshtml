@model IEnumerable<Evaluation_Workshop_Final_CDA_C_.Data.Race>

@{
    ViewData["Title"] = "Liste des Races";
}

<h1>Index</h1>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">@ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Créer une nouvelle Race
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RaceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RaceDescription)
                    </th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaceName)
                        </td>
                        <td>
                            @* On peut tronquer la description si elle est trop longue pour la liste *@
                            @(item.RaceDescription.Length > 100 ? item.RaceDescription.Substring(0, 100) + "..." : item.RaceDescription)
                        </td>
                        <td class="text-end">
                            @* On utilise un groupe de boutons pour un look plus pro *@
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.RaceId" class="btn btn-outline-secondary">Modifier</a>
                                <a asp-action="Details" asp-route-id="@item.RaceId" class="btn btn-outline-info">Détails</a>
                                <a asp-action="Delete" asp-route-id="@item.RaceId" class="btn btn-outline-danger">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-light">
        <a asp-controller="Home" asp-action="Index" class="btn btn-link">Retour à l'accueil</a>
    </div>
</div>