@model Evaluation_Workshop_Final_CDA_C_.Models.CreateRaceViewModel

@{
    ViewData["Title"] = "Créer une nouvelle Race";
}

<h1>Create</h1>

<h4>Race</h4>
<hr />
<div class="card shadow-sm" style="max-width: 40rem;">
    <div class="card-header">
        <h3 class="mb-0">@ViewData["Title"]</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="RaceName" class="control-label"></label>
                <input asp-for="RaceName" class="form-control" />
                <span asp-validation-for="RaceName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RaceDescription" class="control-label"></label>
                <textarea asp-for="RaceDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="RaceDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            <input type="submit" value="Créer la Race" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
