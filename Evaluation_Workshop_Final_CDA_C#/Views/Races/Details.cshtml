@model Evaluation_Workshop_Final_CDA_C_.Data.Race

@{
    ViewData["Title"] = "Détails de la race";
}

<h1>Details</h1>

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="mb-0">Détails de la Race : @Model.RaceName</h3>
    </div>
    <div class="card-body">

        <div class="mb-3">
            <strong>@Html.DisplayNameFor(model => model.RaceName)</strong>
            <p class="ms-2">@Html.DisplayFor(model => model.RaceName)</p>
        </div>

        <hr />

        <div class="mb-3">
            <strong>@Html.DisplayNameFor(model => model.RaceDescription)</strong>
            <blockquote class="ms-2">@Html.DisplayFor(model => model.RaceDescription)</blockquote>
        </div>

    </div>
    <div class="card-footer bg-light text-end">
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
